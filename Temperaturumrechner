def celsius_to_fahrenheit(celsius):
    return (celsius * 9/5) + 32

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

print("Wähle die Umrechnung: ")
print("1. Celsius zu Fahrenheit")
print("2. Fahrenheit zu Celsius")

wahl = input("Option eingeben (1/2): ")

if wahl == "1":
    celsius = float(input("Gib die Temperatur in Celsius ein: "))
    print(f"{celsius}°C sind {celsius_to_fahrenheit(celsius):.2f}°F.")
elif wahl == "2":
    fahrenheit = float(input("Gib die Temperatur in Fahrenheit ein: "))
    print(f"{fahrenheit}°F sind {fahrenheit_to_celsius(fahrenheit):.2f}°C.")
else:
    print("Ungültige Auswahl!")
